<div class="container">
    <br>
    <br>
    
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9 pt-5">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>

                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center"><h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1></div>
                                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: "user") do |f| %>

                                    <div class="form-group">
                                        <%= f.input :email,
                                                    required: false,
                                                    autofocus: true,
                                                    input_html: { autocomplete: "email" } %>
                                    </div>

                                    <div class="form-group">
                                        <%= f.input :password,
                                                    required: false,
                                                    input_html: { autocomplete: "current-password" } %>
                                    </div>

                                    <%= f.button :submit, "Login", class: "btn btn-primary btn-user btn-block" %>
                                    <hr>
                                    
                                <% end %>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    .bg-gradient-default{
        background: #fec007!important;
    }
</style>