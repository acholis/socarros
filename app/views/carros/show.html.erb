<!-- Begin Page Content -->
<div class="container-fluid">
    <br>

    <div class="row">
        <div class="col-md-6">
            <h1 class="h3 mb-2 text-gray-800">Detalhes do carro</h1>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">

            <div class="row">
                <div class="col-lg-6 col-sm-12">
                    <p>
                        <% if @carro.disponivel %>
                            <span class="badge badge-success">Disponível</span>
                        <% else %>
                            <span class="badge badge-danger">Indisponível</span>
                        <% end %>
                        <%= link_to 'Actualizar', edit_carro_path(@carro), class: "btn btn-interesse btn-sm" %>
                        <%= link_to 'Destroy', @carro, class: "btn btn-danger btn-sm mr-2", style: "float: right;", method: :delete, data: { confirm: 'Are you sure?' } %> |
                    </p>
                    <p><strong>Preço: </strong><%= @carro.preco_total.to_kwanza %></p>
                    <p><strong>Marca: </strong><%= @carro.marca %></p>
                    <p><strong>Modelo: </strong><%= @carro.modelo %></p>
                    <p><strong>Cor da viatura: </strong><%= @carro.cor %></p>
                    <p><strong>Km: </strong><%= number_with_delimiter(@carro.km) %></p>
                    <p><strong>Descrição :</strong><%= @carro.descricao %></p>
                </div>

                <div class="col-lg-6 col-sm-12">
                    <%= image_tag(@carro.destaque, class: "img-fluid") %>
                </div>
            </div>

            <hr>

            <div class="row">
                <% @carro.files.each do |file| %>
                    <div class="col-md-3 d-flex ftco-animate" style="margin-bottom: 20px;">
                        <img src="<%= url_for(file) %>" class="img-fluid img-thumbnail">
                    </div>
                <% end %>
            </div>

        </div>
    </div>

</div>
<p id="notice"><%= notice %></p>



