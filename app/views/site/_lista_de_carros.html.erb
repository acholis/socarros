<% @carros.each do |carro| %>
    <div class="col-md-3 d-flex ftco-animate">
        <div class="blog-entry justify-content-end card" style="padding: 5px">
            <div class="text">
                <a href="<%= detailhes_path(carro) %>" class="block-20 img" style="background-image: url(<%= url_for(carro.destaque) %>);"></a>
                <div class="meta mb-1">
                    <a href="<%= detailhes_path(carro) %>" class="text-link">
                        <%= carro.created_at.strftime("%d/%m/%Y") %> 
                        <span style="float: right;"><%= carro.preco_total.to_kwanza %></span>
                    </a>
                </div>
                <h4 class="heading" style="font-weight: 100;"><a href="<%= detailhes_path(carro) %>"><%= carro.marca %> - <%= carro.modelo %></a></h4>
            </div>
        </div>
    </div>
<% end %>