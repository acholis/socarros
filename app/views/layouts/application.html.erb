<!DOCTYPE html>
<html>
  <head>
    <title>.:: Só carros ::.</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag '/favicon.ico' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="<%= meta_description %>">
    <meta name="keywords" content="<%= meta_keywords %>">
    <meta name="distribution" content="web">
    <meta name="geo.region" content="Angola +244">

    <!-- Facebook SEO -->
    <meta property="og:title" content="<%= meta_title_fb %>">
    <meta property="og:type" content="article" />
    <meta property="og:description" content="<%= meta_description %>">
    <meta property="og:site_name" content="Só carros" />
    <meta property="og:type" content="website">
    <meta property="og:image" content="<%= "#{root_url}/logo.png" %>">
    <meta property="og:url" content="<%= root_url %>">
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="/dashboard/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <link href="/dashboard/css/sb-admin-2.min.css" rel="stylesheet">

  </head>
    <%= render 'layouts/flash' %>

    <% if user_signed_in? %>
        <body id="page-top">
            <div id="wrapper">
                <%= render '/layouts/sidbar' %>
                <div id="content-wrapper" class="d-flex flex-column">
                    <div id="content">
                        <%= render 'layouts/navbar' %>
                        <%= yield %>
                    </div>
                </div>
            </div>
        </body>
    <% else %>
        <body class="bg-gradient-default">
            <%= yield %>
        </body>
    <% end %>

    <script src="/dashboard/vendor/jquery/jquery.min.js"></script>
    <script src="/dashboard/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/dashboard/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="/dashboard/js/sb-admin-2.min.js"></script>


</html>
