
<%= simple_form_for(@quero_carro) do |f| %>

    <div class="modal fade" id="want-car" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Quero um carro</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <%= f.error_notification %>
                    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

                    <div class="form-inputs">
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <%= f.input :marca, placeholder: "Toyota" %>
                                <%= f.input :modelo, placeholder: "Land Cruse" %>

                                <%= f.input :preco, placeholder: "2200000" %>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <%= f.input :telefone, placeholder: "913000999" %>
                                <%= f.input :nome, placeholder: "António da Costa" %>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <%= f.input :descricao, placeholder: "Adicona outras informações relevante aqui" %>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-df text-white">Solicitar agora</button>
                </div>
            </div>
        </div>
    </div>


<% end %>

<style>
    ::placeholder {
        font-size: 12px;
        font-weight: 100;
        color: #7f6103;
    }

    .form-control{
        background: #7f610308 !important;
    }
</style>