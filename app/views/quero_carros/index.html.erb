<p id="notice"><%= notice %></p>

    <br>
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Quero carro</h1>
    </div>


    <div class="card shadow mb-4">
        <div class="card-header py-3"><h6 class="m-0 font-weight-bold text-primary">Lista de pedidos</h6></div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Marca & Modelo</th>
                            <th>Pre√ßo</th>
                            <th>Telefone</th>
                            <th>Nome</th>
                            <th colspan="3"></th>
                        </tr>
                    </thead>

                    <tbody>
                      <% @quero_carros.each do |quero_carro| %>
                        <tr>
                          <td><%= quero_carro.marca %> - <%= quero_carro.modelo %></td>
                          <td><%= quero_carro.preco %></td>
                          <td><%= quero_carro.telefone %></td>
                          <td><%= quero_carro.nome %></td>
                          <td><%= link_to 'Show', quero_carro %></td>
                          <td><%= link_to 'Edit', edit_quero_carro_path(quero_carro) %></td>
                          <td><%= link_to 'Destroy', quero_carro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                      <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


