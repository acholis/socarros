

<!-- Modal -->
<div class="modal fade" id="entrar-em-contacto" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-light text-dark" id="exampleModalLabel">Estou interessado</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <%= form_with(model: @interess, local: true) do |form| %>

                <div class="modal-body">
                    <%= form.hidden_field :carro_id %>

                    <div class="field">
                        <%= form.label :nome %>
                        <%= form.text_field :nome %>
                    </div>

                    <div class="field">
                        <%= form.label :telefone %>
                        <%= form.text_field :telefone %>
                    </div>

                    <div class="field">
                        <%= form.label :proposta %>
                        <%= form.text_field :proposta %>
                    </div>

                    <div class="field">
                        <%= form.label :visita %>
                        <%= form.datetime_select :visita, label: "Quando estas disponÃ­vel para ver ?" %>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm text-light" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-interesse btn-sm text-light">Enviar</button>
                </div>

            <% end %>

        </div>
    </div>
</div>
